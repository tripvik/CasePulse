<div class="conversation-container-wrapper @(IsGeneratingInsight ? "glowing-container" : "")">
    <MudTabs Elevation="0"
             Rounded
             Outlined
             Centered
             ApplyEffectsToContainer
             PanelClass="conversation-tab-panel"
             MinimumTabWidth="80px">
       <MudTabPanel Icon="@Icons.Material.Filled.Wifi">
            <div class="transcript-panel-wrapper">
                <Status />
            </div>
        </MudTabPanel>
        <MudTabPanel Icon="@Icons.Material.Filled.Mic">
            <div class="transcript-panel-wrapper">
                <TranscriptContainer Messages="@Conversation?.Transcript" />
            </div>
        </MudTabPanel>
        <MudTabPanel Icon="@Icons.Material.Filled.AutoAwesome">
            <div class="tab-content-wrapper">
                <SummaryContainer Summary="@Conversation?.Summary" Topics="@Conversation?.ConversationInsights?.Topics" />
            </div>
        </MudTabPanel>
        <MudTabPanel Icon="@Icons.Material.Filled.TaskAlt">
            <div class="tab-content-wrapper">
                <TaskContainer Tasks="@Conversation?.ConversationInsights?.ActionItems" />
            </div>
        </MudTabPanel>
        <MudTabPanel Icon="@Icons.Material.Filled.Timeline">
            <div class="tab-content-wrapper">
                <TimelineContainer TimelineEvents="@Conversation?.Timeline" />
            </div>
        </MudTabPanel>
    </MudTabs>
</div>

@code {
    [Parameter]
    public ConversationRecord Conversation { get; set; } = new();

    [Parameter]
    public bool IsGeneratingInsight { get; set; }
}